### PATCH ###
echo
echo "~/~ patching."
echo "patching: \"$FILENAME\" (archives)"
echo

if [ -f "./$FILENAME" ]
  then
  echo "+OK"
  mv "./$FILENAME" $DESTINATION
  elif [ -d "$DESTINATION" ]
  then
  cp "./$FILENAME" $LOCATION
  export model_ai_patched="a0+ok"
  echo "+OK (1)"
  elif [ -f "./run" ]
  then
  mkdir -p $DESTINATION
  cp "./$FILENAME" $DESTINATION
  export model_ai_patched="a1+ok"
  echo "+OK (2)"
  else
  export model_ai_patched="not+ok"
  echo "+NOT_OK(3)"
  exit 1
fi

