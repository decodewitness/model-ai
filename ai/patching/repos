LIST_URL_ROOT="https://model-ai.com/archive"
LIST_URL="$LIST_URL_ROOT/$FILENAME"   # might contain additional archives

### PATCHING ###
DLCSV="$1"
DESTINATION="./ai/patching/files/"
LOCATION=$DESTINATION
